{  
  "compilerOptions": {  
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2017",  
    "module": "es2022",  
    "rootDir": "src",  
    "moduleResolution": "node",
    "outDir": "dist",  
    "sourceMap": true,  
    "lib": ["es7"],  
    "esModuleInterop": true  
  },  
  "include": [  
    "src/**/*.ts"  
  ],  
  "exclude": [  
    "node_modules"  
  ]  
} 
